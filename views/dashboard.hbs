<h5>Dashboard</h5>
<h3>Welcome {{name}} </h3>
<h6>Here are your Stories..</h6>

{{#if stories}}

  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
      <tbody>
        {{#each stories}}
          <tr>
            <td><a href="/stories/{{_id}}">{{title}}</a></td>
            <td>{{formatDate createdAt "MMMM Do YYYY, h:mm:ss a"}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td>
              <a href="/stories/edit/{{_id}}" class="btn btn-float">
                <i class="fas fa-edit"></i>
              </a>

              <form action="/stories/{{_id}}" method="POST">
                <input type="hidden" name="_method" value="DELETE" />
                <button class="red btn">
                  <i class="fas fa-trash"></i>
                </button>
              </form>

            </td>
          </tr>
        {{/each}}
      </tbody>
    </thead>
  </table>

{{else}}
  <p>You haven't created any stories </p>
{{/if}}